{
  "bracketSpacing": true,
  "singleQuote": false,
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,

  "plugins": [
    "@ianvs/prettier-plugin-sort-imports",
    "prettier-plugin-path"
  ],

  "importOrder": [
    "^react$",
    "^react",
    "<THIRD_PARTY_MODULES>",
    "^@/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
